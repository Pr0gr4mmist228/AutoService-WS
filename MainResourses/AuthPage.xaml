<Page x:Class="AutoService_WS.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoService_WS"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Авторизация">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Margin="0,5,0,5" FontSize="20pt" FontFamily="Tw Cen MT" >Введите код администратора</TextBlock>
            <TextBox TextAlignment="Center" x:Name="password" Height="42" Width="250" FontSize="18pt"></TextBox>
            <Button IsDefault="True" Margin="0,5,0,5" x:Name="buttonEnterAdmin" Height="43" Width="252" Click="buttonEnterAdmin_Click">Войти как администратор</Button>
            <Button Margin="0,5,0,5" Height="43" Width="252" x:Name="buttonEnterClient" Click="buttonEnterClient_Click">Войти как клиент</Button>
        </StackPanel>
    </Grid>
</Page>
