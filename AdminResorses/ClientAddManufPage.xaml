<?xml version="1.0" encoding="utf-8"?>
<Page
	x:Class="AutoService_WS.ClientAddManufPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Запись клиента на услугу">
	<Grid>
		<StackPanel
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Center"
			VerticalAlignment="Center"
			Margin="0,0,0,0">
			<TextBlock
				FontSize="12pt"
				TextAlignment="Center">Выберите услугу</TextBlock>
			<ComboBox
				x:Name="comboManuf" />
			<TextBlock
				FontSize="12pt"
				TextAlignment="Center">Выберите клиента</TextBlock>
			<ComboBox
				x:Name="comboClients" />
			<TextBlock
				FontSize="12pt"
				TextAlignment="Center">Выберите дату</TextBlock>
			<DatePicker
				x:Name="datePicker" />
		</StackPanel>
		<StackPanel
			VerticalAlignment="Bottom"
			HorizontalAlignment="Center">
			<Button
				Margin="0,0,0,5"
				x:Name="acceptButton"
				RenderTransformOrigin="0.5,0.5"
				Click="acceptButton_Click">Записать клиента</Button>
		</StackPanel>
	
				<Button VerticalAlignment="Top" Margin="5,0,0,0" HorizontalAlignment="Left" Width="50" x:Name="buttonBack" Click="ButtonBack_Click">Назад</Button>
	</Grid>
</Page>